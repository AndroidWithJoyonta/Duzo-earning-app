<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">
        <LinearLayout
            android:id="@+id/toolbar"
            android:elevation="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/primary">
            <RelativeLayout
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/logo_round"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="25sp"
                android:textStyle="bold"
                android:shadowDy="5"
                android:shadowDx="5"
                android:shadowRadius="2"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/wallet"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded">
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/coins"/>
                <TextView
                    android:id="@+id/point"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    app:lottie_rawRes="@raw/wheel"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
                <com.makeeasy.rozfun.custom.LuckyWheelView
                    android:id="@+id/luckyWheel"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="37dp"
                    app:lkwBackgroundColor="#8F0000"
                    app:lkwCenterImage="@drawable/star"
                    app:lkwCursor="@drawable/pointer"
                    app:lkwTextColor="@color/white"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/button"
                app:cardCornerRadius="30dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/spin_now"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8F0000"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/chr"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:textColor="#FFAB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/taka" />
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/win"
            app:lottie_loop="false"
            android:elevation="20dp"
            app:lottie_autoPlay="false"
            android:visibility="gone"
            app:lottie_rawRes="@raw/confetti"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:headerLayout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.drawerlayout.widget.DrawerLayout>